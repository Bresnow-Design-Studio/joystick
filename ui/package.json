{
  "name": "@joystick.js/ui",
  "version": "0.227.0",
  "description": "A zero-dependency JavaScript framework for building user interfaces.",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "export NODE_ENV=development && rollup -c rollup.config.js -w",
    "build": "rm -rf ./dist && export NODE_ENV=production && rollup -c",
    "esbuild": "rm -rf ./dist && ./node_modules/.bin/esbuild src/index.js --bundle --outfile=dist/index.js --format=esm --minify",
    "development:release": "export NODE_ENV=development && node release.js",
    "production:release": "export NODE_ENV=production && node release.js",
    "build:release": "npm run build && npm run development:release",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "glob": "^7.1.7",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "semver": "^7.3.5"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "esbuild": "^0.13.3",
    "url-pattern": "^1.0.3"
  }
}
